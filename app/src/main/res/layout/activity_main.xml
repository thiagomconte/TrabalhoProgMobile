<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnListAlunos"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#0026FB"
        android:onClick="TrocarListarAlunos"
        android:text="Listar Alunos"
        app:backgroundTint="#00B0FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegAluno" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="26dp"
        android:fontFamily="sans-serif-black"
        android:rotationX="0"
        android:text="Controle de Cursos e Alunos"
        android:textColor="#00B0FF"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegCurso"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="#0026FB"
        android:onClick="TrocarRegCurso"
        android:text="Registrar Curso"
        app:backgroundTint="#00B0FF"
        app:layout_constraintEnd_toStartOf="@+id/btnRegAluno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnListCursos"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:background="#0026FB"
        android:text="Listar Cursos"
        app:backgroundTint="#00B0FF"
        app:layout_constraintEnd_toStartOf="@+id/btnListAlunos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegCurso"
        android:onClick="TrocarListarCursos"/>

    <Button
        android:id="@+id/btnRegAluno"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#0026FB"
        android:onClick="TrocarRegAluno"
        android:text="Registrar Aluno"
        android:textColor="#FFFFFF"
        app:backgroundTint="#00B0FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>